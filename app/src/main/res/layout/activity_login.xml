<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/backbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/lifecarelogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <ImageView
        android:id="@+id/app_user_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/buttonclicked"
        app:layout_constraintEnd_toStartOf="@+id/dietitian_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/email_field"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/app_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratlight"
        android:text="@string/advisee"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/app_user_button"
        app:layout_constraintEnd_toEndOf="@+id/app_user_button"
        app:layout_constraintStart_toStartOf="@+id/app_user_button"
        app:layout_constraintTop_toTopOf="@+id/app_user_button" />


    <ImageView
        android:id="@+id/dietitian_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/buttonnonclicked"
        app:layout_constraintEnd_toStartOf="@+id/sport_coach_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/app_user_button"
        app:layout_constraintTop_toTopOf="@+id/app_user_button" />

    <TextView
        android:id="@+id/dietitian_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratlight"
        android:text="@string/dietitian"
        android:textColor="@color/ourPurple"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/dietitian_button"
        app:layout_constraintEnd_toEndOf="@+id/dietitian_button"
        app:layout_constraintStart_toStartOf="@+id/dietitian_button"
        app:layout_constraintTop_toTopOf="@+id/dietitian_button" />


    <ImageView
        android:id="@+id/sport_coach_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonnonclicked"
        app:layout_constraintEnd_toEndOf="@+id/email_field"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dietitian_button"
        app:layout_constraintTop_toTopOf="@+id/dietitian_button" />

    <TextView
        android:id="@+id/sport_coach_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratlight"
        android:text="@string/sport_coach"
        android:textColor="@color/ourPurple"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/sport_coach_button"
        app:layout_constraintEnd_toEndOf="@+id/sport_coach_button"
        app:layout_constraintStart_toStartOf="@+id/sport_coach_button"
        app:layout_constraintTop_toTopOf="@+id/sport_coach_button" />


    <EditText
        android:id="@+id/email_field"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittextbackground"
        android:fontFamily="@font/montserratlight"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/password_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_user_button" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittextbackground"
        android:fontFamily="@font/montserratlight"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_field" />


    <TextView
        android:id="@+id/forgotten_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserratlight"
        android:gravity="center"
        android:text="@string/forgotten_password"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/password_field"
        app:layout_constraintTop_toBottomOf="@+id/password_field" />


    <ImageView
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonbackground"
        app:layout_constraintBottom_toTopOf="@+id/facebook_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_button"
        android:layout_alignTop="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignBottom="@+id/login_button"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="@+id/login_button" />

    <ImageView
        android:id="@+id/facebook_login"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/facebookbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_real_login_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_login"
        app:layout_constraintEnd_toEndOf="@+id/facebook_login"
        app:layout_constraintStart_toStartOf="@+id/facebook_login"
        app:layout_constraintTop_toTopOf="@+id/facebook_login" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/facebooklogo"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_login"
        app:layout_constraintStart_toStartOf="@+id/facebook_login"
        app:layout_constraintTop_toTopOf="@+id/facebook_login" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/login_with_face"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_login"
        app:layout_constraintEnd_toEndOf="@id/facebook_login"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/facebook_login" />


    <ImageView
        android:id="@+id/google_login"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/googlebutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/googlelogo"
        app:layout_constraintBottom_toBottomOf="@+id/google_login"
        app:layout_constraintStart_toStartOf="@+id/google_login"
        app:layout_constraintTop_toTopOf="@+id/google_login" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center|start"
        android:text="@string/login_with_google"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/google_login"
        app:layout_constraintEnd_toEndOf="@+id/google_login"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/google_login" />

</android.support.constraint.ConstraintLayout>