            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/meal4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal3_content" />

        <TextView
