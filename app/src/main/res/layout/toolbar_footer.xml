<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/colorGray100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="12dp">

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:src="@drawable/home_non_clicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/footer_lifecareicon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/footer_lifecareicon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:src="@drawable/device_non_clicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/footer_schedule"
            app:layout_constraintStart_toEndOf="@+id/home_button"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/footer_schedule"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:src="@drawable/schedule_non_clicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/footer_talkbutton"
            app:layout_constraintStart_toEndOf="@+id/footer_lifecareicon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/schedule_alert"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/message_alert"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/footer_schedule"
            app:layout_constraintEnd_toEndOf="@+id/footer_schedule"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/footer_schedule"
            app:layout_constraintTop_toTopOf="@+id/footer_schedule"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/footer_talkbutton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:src="@drawable/talk_non_clicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/footer_schedule"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/message_alert"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/message_alert"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/footer_talkbutton"
            app:layout_constraintEnd_toEndOf="@+id/footer_talkbutton"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/footer_talkbutton"
            app:layout_constraintTop_toTopOf="@+id/footer_talkbutton"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>