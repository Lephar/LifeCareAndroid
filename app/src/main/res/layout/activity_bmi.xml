    tools:context=".BMIActivity">

    <ImageButton
        android:id="@+id/bmiBackButton"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton" />

    <TextView
        android:id="@+id/bmiBackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:text="Beden Kütle İndeksi"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bmiBackButton"
        app:layout_constraintStart_toEndOf="@+id/bmiBackButton"
        app:layout_constraintTop_toTopOf="@+id/bmiBackButton" />

    <ImageView
        android:id="@+id/bmiIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmiBackText"
        app:srcCompat="@drawable/bmi_icon" />

    <TextView
        android:id="@+id/bmiAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="25 kg/m²"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/bmiIcon"
        app:layout_constraintStart_toStartOf="@+id/bmiIcon"
        app:layout_constraintTop_toBottomOf="@+id/bmiIcon" />

    <TextView
        android:id="@+id/bmiMeasurementDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="05.05.2019"
        app:layout_constraintEnd_toEndOf="@+id/bmiAmountText"
        app:layout_constraintStart_toStartOf="@+id/bmiAmountText"
        app:layout_constraintTop_toBottomOf="@+id/bmiAmountText" />

    <ImageView
